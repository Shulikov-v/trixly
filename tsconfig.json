{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "pretty": true,
    "module": "commonjs",
    "jsx": "preserve",
    "removeComments": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6"

  },
  "exclude": [
    "node_modules",
    "dist",
    "typings"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}